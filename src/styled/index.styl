/* ----- flex helpers ----- */


.flex-row
  display flex
  flex-direction row


.flex-column
  display flex
  flex-direction column


.flex-center
  justify-content center


.flex-between
  justify-content space-between


.flex-vertical-center
  align-items center




/* ----- inputs ----- */


input
  width 100%
  padding 0.75rem 1rem
  background-color cb-fon
  color cf-grey-two 
  background-clip padding-box
  border 1px solid #404040
  box-sizing border-box


input focus
  border-color #757f89


.search input
  padding inherit

.modal input
  font-size fs-modal


.input-group
  display flex
  align-items flex-start


.input-group + .input-group
  margin-top 10px


.input-group > .error
  width 100%
  padding 20px
  color cf-red
  background-clip padding-box
  box-sizing border-box
  border-top 1px solid #404040



.modal .input-group
  min-width 444px

.header input
  width inherit
  padding inherit
/* ----- buttons ----- */


button
  cursor pointer


button:focus
  border 2px solid #464c52


.red-button
  width 97px
  height 40px
  background-color #a00000
  border 0px
  font-size fs-control
  font-weight 600
  color cf-white


.pair-button
  width 153px
  height 40px
  background-color #ffa028
  border 0px
  font-size fs-control
  font-weight 600


.btn.transparent
  background transparent
  border 0
  padding 0  


.options-view button
  background transparent
  color cf-white
  border 0


.sign-in-button
  width 97px
  height 40px
  background-color transparent
  border 0px
  font-size fs-control
  font-weight 600
  color cf-grey-two


.button-form
  display inline-block
  width 100%
  text-align center
  vertical-align middle
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  border 1px solid cb-border
  padding 0.75rem 1rem
  background cb-fon
  color cf-grey-two


.button-form hover
  border-color rgba(0,0,0,0.6)


.modal button
  font-size fs-modal
  background-color cb-fon
  border 1px solid #404040
  color #d0d0d0


/* ----- Modal ----- */


.modal-fon
  position fixed
  top 0
  bottom 0
  display flex
  align-items baseline
  justify-content center
  width 100%
  height 100%
  background-color cb-two
  padding-top 100px


.close-modal
  position relative
  top -50px
  right -465px
  cursor pointer
  font-size fs-icon-close

.modal
  background-color cb-modal
  padding 77px
  border 1px solid cb-border-two
  font-size fs-modal

.modal-form
  min-width 300px


/* ----- Search ----- */

.search
  background-color cb-modal


/* ----- Tile ----- */

.tile-list
  display grid
  grid-template-columns repeat(auto-fill, minmax(400px,1fr))


.tile-list > div:nth-child(odd)
  background-color cb-one


.tile-list > div:nth-child(even)
  background-color cb-two


.tile
  padding 0 20px
  margin 1.5px
  background-color cb-two


.tile > div
  padding 12px 0


.tile > div + div
  border-top 1px solid cb-border



/* ----- Table ----- */

table
  border-collapse collapse
  width 100%

td
  padding 19px


table.full-width
  width 100%


tr:nth-child(odd)
  background-color cb-one


tr:nth-child(even)
  background-color cb-two


tr + tr
  padding-top 3px


td + td
  border-left 1px solid cb-border


.search tr :hover
  background-color #141414


