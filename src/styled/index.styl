// cb - color-black
cb-fon = #000
cb-one = #040404
cb-two = #080808
cb-border = #1c1c1c
// cf - color-font
cf-red = #c70021
cf-mango = #ffa028
cf-green = #008951
cf-blue = #0099ff
cf-grey = #b3b3b3
cf-white = #fff
//  ci - color-icon
ci-active = #5f5f5f
ci-disactive = #252525
// fs - font-size
fs-big = 36px
fs-modal = 18px
fs-control = 16px
fs-norm = 14px
fs-small = 12px






@font-face 
  font-family 'monacoregular'
  src url('../fonts/monaco_regular-webfont.woff2') format('woff2'),
      url('../fonts/monaco_regular-webfont.woff') format('woff')
  font-weight normal
  font-style normal


@import url('https://fonts.googleapis.com/css?family=Roboto+Mono')

body
  font-family monacoregular
  background-color cb-fon
  color cf-grey 
  font-size fs-norm
  margin 0px




.logo-name
  color cf-white


.roboto *
  font-family 'Roboto Mono', monospace



.name
  color #ffa028


.name-value-group > div + div
  margin-top 5px


.value
  font-family 'Roboto Mono', monospace
  font-size fs-small




.red
  color cf-red


.green
  color cf-green


.blue
  color cf-blue

.mango
  color cf-mango




.active
  color ci-active


.disactive
  color ci-disactive


.menu
  color ci-disactive


.table-row-menu
  text-align right



.interest-ratio div + div
  margin-left 25px


.interest-ratio-value
  font-size fs-big



.f-bold
  font-weight 600




.header
  position sticky
  top 0
  padding-left 20px
  border-bottom 1px solid cb-border
  background-color cb-fon

.header .userName
  margin-right 19px


.options-view
  border 1px solid cb-border
  border-top 0px solid transparent
  border-bottom 0px solid transparent



.icon-arrow-rigth
  margin-left 17px
  width 0 
  height 0 
  border 10px solid #fff
  border-top 7px solid transparent
  border-bottom 7px solid transparent
  border-right 7px solid transparent


/* ----- flex helpers ----- */


.flex-row
  display flex
  flex-direction row


.flex-column
  display flex
  flex-direction column


.flex-center
  justify-content center


.flex-between
  justify-content space-between


.flex-vertical-center
  align-items center




/* ----- inputs ----- */


input
  width 100%
  padding 0.75rem 1rem
  background-color cb-fon
  color cf-grey 
  background-clip padding-box
  border 1px solid cb-border
  box-sizing border-box


input focus
  border-color #757f89


.search input
  padding inherit

.input-group
  display flex
  align-items flex-start


.input-group + .input-group
  margin-top 1rem


.input-group > .error
  width 100%
  padding 0.75rem 1rem
  color cf-red
  background-clip padding-box
  box-sizing border-box


/* ----- buttons ----- */


button
  cursor pointer


button:focus
  border 2px solid #464c52


.red-button
  width 97px
  height 40px
  background-color #a00000
  border 0px
  font-size fs-control
  font-weight 600
  color cf-white


.pair-button
  width 153px
  height 40px
  background-color #ffa028
  border 0px
  font-size fs-control
  font-weight 600


.btn.transparent
  background transparent
  border 0
  padding 0  


.options-view button
  background transparent
  color cf-white
  border 0


.sign-in-button
  width 97px
  height 40px
  background-color cf-grey
  border 0px
  font-size fs-control
  font-weight 600
  color cb-fon


.button-form
  display inline-block
  width 100%
  text-align center
  vertical-align middle
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  border 1px solid cb-border
  padding 0.75rem 1rem
  background cb-fon
  color cf-grey


.button-form hover
  border-color rgba(0,0,0,0.6)


/* ----- Modal ----- */


.modal-fon
  position fixed
  top 0
  bottom 0
  display flex
  align-items baseline
  justify-content center
  width 100%
  height 100%
  background-color cb-two
  padding-top 100px


.close-modal
  position: relative;
  top: -50px;
  right: -330px;
  cursor pointer
  font-size fs-modal

.modal
  background-color cb-two
  padding 77px
  border 1px solid cb-border

.modal-form
  min-width 300px


/* ----- Tile ----- */

.tile-list
  display grid
  grid-template-columns repeat(auto-fill, minmax(400px,1fr))


.tile-list > divnth-child(odd)
  background-color cb-one


.tile-list > divnth-child(even)
  background-color cb-two


.tile
  padding 0 20px
  margin 1.5px
  background-color cb-two


.tile > div
  padding 12px 0


.tile > div + div
  border-top 1px solid cb-border



/* ----- Table ----- */

table
  border-collapse collapse
  width 100%

td
  padding 19px


table.full-width
  width 100%


trnth-child(odd)
  background-color cb-one


trnth-child(even)
  background-color cb-two


tr + tr
  padding-top 3px


td + td
  border-left 1px solid cb-border


.search tr hover
  background-color cb-border


