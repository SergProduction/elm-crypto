// cb - color-black
cb-fon = #000
cb-one = #040404
cb-two = #080808
cb-modal = #060606
cb-border = #1c1c1c
cb-border-two = #262626

// cf - color-font
cf-red = #ff0002
cf-mango = #ffa028
